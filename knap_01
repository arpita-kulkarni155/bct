// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;

struct Item{
    int profit;
    int weight;
    
    Item():profit(0),weight(0) {};
    
    Item(int profit,int weight){
        this->profit=profit;
        this->weight=weight;
    }
};

int Knapsack01(int W,Item arr[],int N){
    
    //i=item,j=capacity
    //initialize DP table
    vector<vector<int>>dp(N+1,vector<int>(W+1,0));
    
    //itrerate through each item 1->N
    for(int i=0;i<=N;i++){
        //itrerate through each weight 1->w
        for(int w=0;w<=W;w++){
            
            if(arr[i-1].weight<=w){
                dp[i][w]=max(dp[i-1][w],arr[i-1].profit+dp[i-1][w-arr[i-1].weight]);
            }
            else{
                dp[i][w]=dp[i-1][w];
            }
        }
    }
    
    return dp[N][W];
    
}

int main(){
    int W,N;
    
    cout<<"Enter capacity of knapsack:";
    cin>>W;
    
    cout<<"Enter no of items:";
    cin>>N;
    
    //dynamicaaly memory allocate
    Item* arr=new Item[N];
    
    for(int i=0;i<N;i++){
        int profit,weight;
        
        cout<<"Enter profit and weight of item"<<i+1<<":";
        cin>>profit>>weight;
        
        arr[i]=Item(profit,weight);
    }
    
    int maxprofit=Knapsack01(W,arr,N);
    cout<<"max profit:"<<maxprofit<<endl;
    
    delete[] arr;
    
    return 0;
}

